<tr>
  <td><%= flight.number %></td>
  <td><%= flight.departure_airport.city %></td>
  <td><%= flight.departs_at.localtime.strftime("%l:%M %p %Z") %></td>
  <td><%= flight.arrival_airport.city %></td>
  <td><%#= flight.arrives_at.localtime.strftime("%l:%M %p %Z") %></td>
  <td><%= flight.miles %></td>
  <td><%= flight.duration %> minutes</td>
  <td><%= flight.seats %></td>
  <td><%= link_to "Book Now", new_reservation_url(flight_id: flight.id), class: 'btn btn-success' %></td>
</tr>
